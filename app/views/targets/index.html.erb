<div class="page-header">
  <h1>
    Targets
    <a href="/targets/new" class="btn btn-lg btn-success">New Target</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Company</th>
        <th>Actions</th>
      </tr>

      <% @targets.each do |target| %>
      <tr>
        <td><%= target.user.created_at %></td>
        <td><%= target.company.name %></td>
        <td>
          <a href="/targets/<%= target.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == target.user %>
            <a href="/targets/<%= target.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_target/<%= target.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
