<div class="page-header">
  <h1>
    Responses
    <a href="/responses/new" class="btn btn-lg btn-success">New Response</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "responses_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :body_cont, "Body contains" %>
    <%= f.text_field :body_cont, :class => "form-control", :placeholder => "Body contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :question_body_cont, "Question body contains" %>
      <%= f.text_field :question_body_cont, :class => "form-control", :placeholder => "Question body contains" %>
    </div>

<div class="form-group">
  <%= f.label :rating, "Feedback Rating" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :feedbacks_rating_gteq, :class => "form-control", :placeholder => "Feedback Rating greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :feedbacks_rating_lteq, :class => "form-control", :placeholder => "Feedback Rating less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "ReviewRequest Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='sent_review_requestsgteqcreated_atPicker'>
                  <%= f.text_field :sent_review_requests_created_at_gteq, :class => "form-control", :placeholder => "ReviewRequest Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='sent_review_requestslteqcreated_atPicker'>
                  <%= f.text_field :sent_review_requests_created_at_lteq, :class => "form-control", :placeholder => "ReviewRequest Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#sent_review_requestsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#sent_review_requestslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#sent_review_requestsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#sent_review_requestslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#sent_review_requestslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#sent_review_requestsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "User Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='applicantgteqcreated_atPicker'>
                  <%= f.text_field :applicant_created_at_gteq, :class => "form-control", :placeholder => "User Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='applicantlteqcreated_atPicker'>
                  <%= f.text_field :applicant_created_at_lteq, :class => "form-control", :placeholder => "User Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#applicantgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#applicantlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#applicantgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#applicantlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#applicantlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#applicantgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/responses" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#responses_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Body</th>
        <th>Question</th>
        <th>Applicant</th>
        <th>Actions</th>
      </tr>

      <% @responses.each do |response| %>
      <tr>
        <td><%= response.body %></td>
        <td>
          <% if response.question.present? %>
            <a href="/questions/<%= response.question.id %>">
              <%= response.question.body %>
            </a>
          <% end %>
        </td>
        <td>
          <% if response.applicant.present? %>
            <a href="/users/<%= response.applicant.id %>">
              <%= response.applicant.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/responses/<%= response.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == response.applicant %>
            <a href="/responses/<%= response.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_response/<%= response.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @responses, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
