<div class="page-header">
  <h1>
    Review requests
    <a href="/review_requests/new" class="btn btn-lg btn-success">New Review request</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Applicant</th>
        <th>Reviewer</th>
        <th>Response</th>
        <th>Actions</th>
      </tr>

      <% @review_requests.each do |review_request| %>
      <tr>
        <td>
          <% if review_request.applicant.present? %>
            <a href="/users/<%= review_request.applicant.id %>">
              <%= review_request.applicant.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if review_request.reviewer.present? %>
            <a href="/users/<%= review_request.reviewer.id %>">
              <%= review_request.reviewer.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= review_request.response_id %></td>
        <td>
          <a href="/review_requests/<%= review_request.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == review_request.applicant %>
            <a href="/review_requests/<%= review_request.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_review_request/<%= review_request.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @review_requests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
