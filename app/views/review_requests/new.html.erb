<!-- Validation failure messages -->
<% if @review_request.errors.any? %>
  <% @review_request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Review Request</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_review_request" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for reviewer_id -->
      <div class="form-group">
        <label for="reviewer_id" class="control-label">
          Reviewer
        </label>

        <%= select_tag(:reviewer_id, options_from_collection_for_select(User.all, :id, :created_at, @review_request.reviewer_id), :class => "form-control") %>
      </div>

      <!-- Label and input for response_id -->
      <div class="form-group">
        <label for="response_id" class="control-label">
          Response
        </label>

        <%= select_tag(:response_id, options_from_collection_for_select(Response.all, :id, :body, @review_request.response_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Review Request
      </button>
      or
      <a href="/review_requests">Cancel</a>
    </form>
  </div>
</div>
