<!-- Validation failure messages -->
<% if @review_request.errors.any? %>
  <% @review_request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Review Request</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_review_request" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for applicant_id -->
      <div class="form-group">
        <label for="applicant_id" class="control-label">
          Applicant
        </label>

        <input type="text" id="applicant_id" name="applicant_id" placeholder="Applicant" class="form-control" value="<%= @review_request.applicant_id %>">
      </div>

      <!-- Label and input for reviewer_id -->
      <div class="form-group">
        <label for="reviewer_id" class="control-label">
          Reviewer
        </label>

        <input type="text" id="reviewer_id" name="reviewer_id" placeholder="Reviewer" class="form-control" value="<%= @review_request.reviewer_id %>">
      </div>

      <!-- Label and input for response_id -->
      <div class="form-group">
        <label for="response_id" class="control-label">
          Response
        </label>

        <input type="text" id="response_id" name="response_id" placeholder="Response" class="form-control" value="<%= @review_request.response_id %>">
      </div>

      <button class="btn btn-success">
        Create Review Request
      </button>
      or
      <a href="/review_requests">Cancel</a>
    </form>
  </div>
</div>
